<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <base href="/">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/parallax/3.1.0/parallax.min.js"></script>

    <link rel="stylesheet" href="./css/style.css">
   
   <style>
        body {
            background-color: #1A1A1A;
            box-sizing: content-box;
            font-family: 'Oxygen';

        }

        h1 {
            text-align: center;
            color: #ff6489;
            font-size: 50px;
            font-family: 'Game Of Squids';
            margin-top: 150px;
            font-weight: normal;
            font-style: normal;
        }

        form {
            display: flex;
            flex-direction: column;
            margin-top: 60px;
            justify-content: center;
            align-items: center;
        }

        input[type=text] {
            padding: 15px 15px;
            width: 245px;
            border-radius: 6px;
            text-decoration: none;
            font-family: 'Oxygen';

            border: none;
        }

        input[type=password] {
            padding: 15px 15px;
            width: 245px;
            border-radius: 6px;
            margin-top: 15px;
            font-family: 'Oxygen';

            text-decoration: none;
            border: none;
        }

        textarea:focus,
        input:focus {
            outline: none;
        }

        input[type=submit] {
            background-color: #ff6489;
            border: none;
            border-radius: 6px;
            color: white;
            padding: 15px 20px;
            font-family: 'Oxygen';
            margin-top: 25px;
            width: 275px;

        }

        #error {
            color: #ff6489;
            margin-top: 25px;
            font-size: 12px;
            text-align: center;
        }

        #signup{
    text-align: center;
    color: white;
    font-family: 'Oxygen';
        margin-top: 20px;
        font-size: 14px;

}
#signup a{
    color: white;
}
    </style>
</head>

<body>
    <h1>Squid Game</h1>
    <form method="post">
        <input type="text" id="username" oninput="check()" name="username" placeholder="Username" required>
        <input type="password" id="password" oninput="check()" name="password" placeholder="Password" required>
        <input type="text" id="wallet" oninput="check()" style="margin-top:15px;" name="walletAddress" placeholder="Bitcoin Wallet Address" required>
        <input type="submit" id="submit" value="Register">
    </form>

        <p id="signup" >Already have an account? <a href="/auth/login">Login</a></p>

        <div id="scene">
            <div data-depth="0.5">
                <div class="l1">
                    <img id="e2" src="./ellipse.png" width="50">
                    <img id="s2" src="./square.png" width="50">
                    <img id="t2" src="./triangle.png" width="50">
                    <img id="e4" src="./ellipse.png" width="50">
                    <img id="e3" src="./ellipse.png" width="40">
                    <img id="s3" src="./square.png" width="50">
                    <img id="t3" src="./triangle.png" width="50">
                    <img id="s4" src="./square.png" width="50">
                    <img id="t4" src="./triangle.png" width="50">
                </div>
            </div>
            <div data-depth="0.2">
                <div class="l1">
                    <img id="e1" src="./ellipse.png" width="40">
                    <img id="s1" src="./square.png" width="50">
                    <img id="t1" src="./triangle.png" width="50">
                  
                </div>
            </div>
          </div>
        <% if(locals.error){ %>
            <p id="error">
                <%= error %>
            </p>
            <% } %>
            <script>
                var scene = document.getElementById('scene');
            var parallaxInstance = new Parallax(scene);
            document.getElementById('submit').style.opacity=0.6;
            document.getElementById('submit').style.pointerEvents='none'

            function check(){
                if(
                document.getElementById('wallet').value.length>5 &&
                document.getElementById('username').value.length>5 &&
                document.getElementById('password').value.length>4)
               { document.getElementById('submit').style.opacity=1;
               document.getElementById('submit').style.pointerEvents='all' }
            }
            </script>

</body>

</html>